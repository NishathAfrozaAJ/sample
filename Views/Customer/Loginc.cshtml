@model Project3.Models.Customer

@{
    ViewData["Title"] = "Loginc";
}

<h1>CUSTOMER LOGIN</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Loginc">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @{
                if (@ViewBag.Message != null)
                {
                   <h6>
                    <div style="color:red">
                            @ViewBag.Message
                    </div>
                        
                    </h6>
                }
                
            }
          
            <div class="form-group">
                <label asp-for="Cname" class="control-label"></label>
                <input asp-for="Cname" class="form-control" />
                <span asp-validation-for="Cname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pass" class="control-label"></label>
                <input asp-for="Pass" type="password"class="form-control" />
                <span asp-validation-for="Pass" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Home">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
